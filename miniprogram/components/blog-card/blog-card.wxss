Page {
  background-color: #ededed;
}

.blog {
  width: 100%;
  padding: 20rpx;
  background-color: #ffff;
}

.blog-header {
  display: flex;
  align-items: center;
}

.blog-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.blog-box {
  flex: 1;
}

.blog-nickName {
  font-size: 32rpx;
  color: #4b4b4b;
}

.blog-time {
  font-size: 24rpx;
  color: #939393;
}

.blog-content {
  margin: 20rpx 0;
  color: #4b4b4b;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.blog-img {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.blog-img .img {
  flex: 1;
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.blog-img .img:nth-child(3n) {
  margin-right: 0;
}
