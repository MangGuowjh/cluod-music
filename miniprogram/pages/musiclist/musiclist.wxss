/* pages/musiclist/musiclist.wxss */
.detail-container {
  height: 680rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.detail-mask {
  position: absolute;
  width: 100%;
  height: 580rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
  border-radius: 0rpx 0rpx 200% 200% / 0rpx 0rpx 100rpx 100rpx !important;
}

.detail-img {
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}

.detail-info {
  display: flex;
  position: absolute;
  top: 85rpx;
  left: 0;
  width: 100%;
  height: 480rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.detail {
  flex-grow: 2;
  line-height: 60rpx;
  width: 0;
}

.detail view {
  color: #fff;
  font-size: 24rpx;
}

.detail .detail-name {
  font-size: 36rpx;
  font-weight: 400;
}
.control{
 position: relative;
 top: 10rpx;
}
.iconfont{
  display: inline-block;
  margin: 0rpx 10rpx;
  font-size: 56rpx;
}
.icon-bofang{
  color: black;
}
.icon-xiazai{
  font-size: 64rpx;
  margin-left: 160rpx;
}
.icon-tubiaozhizuomoban{
  font-size: 64rpx;
}
.operation{
  display: flex;
  position: absolute;
  top: 550rpx;
  left: 50%;
  transform: translate(-50%);
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 50rpx;
  align-items: center;
}
.operation view{
  display: flex;
  align-items: center;
  margin: 0 20rpx 0 20rpx;
  width: 150rpx;
}


