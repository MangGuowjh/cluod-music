.information{
  position: absolute;
  top: 100rpx;
  left: 50%;
  transform: translate(-50%);
  font-size: 32rpx;
}
.container {
  padding: 20rpx;
}

.content {
  position: absolute;
  top: 180rpx;
  width: 100%;
  height: 360rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-color: #fff;
  color: #000000;
  padding: 10rpx;
}

.image-list {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
  margin-top: 520rpx;
}

.image-wrap {
  position: relative;
  left: -110%;
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-align: center;
}

.image {
  width: 100%;
  height: 100%;
}

.icon-shanchu_ {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}

.selectphoto {
  border: 2rpx dashed #ccc;
  position: relative;
  background-color: #f8f8f8;
}

.icon-add {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  color: #ccc;
  font-size: 90rpx;
}

.footer {
  position: fixed;
  width: 100%;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  padding: 40rpx;
  background: #f1f1f1;
}

.words-num {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 40rpx;
}

.send-btn {
  background: #d43c33;
  color: #fff;
  font-size: 28rpx;
}
