/* pages/music/music.wxss */
.swiper{
  height: 340rpx;
}
.img{
  width: 100%;
  height: 100%;
  margin-top: 0rpx;
  border-radius:100rpx
}
.title{
  font-size: 48rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.playlist-container{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.scroll-d{
  white-space: nowrap;
  display: flex;
}
.player-info{
  margin-top: 10rpx;
  text-align: left;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.scroll_box{
  margin-top: 30rpx;
  width: 100%;
  height: 120rpx;
  overflow: hidden;
  padding: 20rpx;
  background: #fff;
  white-space: nowrap;
  border-inline-end: 0.5px solid #adadad;
}
.scroll_box scroll-view{
  height: 100%;
  width: auto;
  overflow:hidden;
}  
.iconfont{
  display: inline-block;
  color: #d43c33;
}
.icon-rili, .icon-FM_weixuanze, .icon-gedan, .icon-PCbofangye_paihangbang, .icon-zhibo, 
.icon-zhuanjiguangpan, .icon-maikefeng, .icon-youxi{
  font-size: 100rpx;
  margin: 0rpx 10rpx;
}
.icon-gengduo{
  margin-left: 20rpx;
  margin-top: 100rpx;
  color:black;
  font-size: 50rpx;
}
  