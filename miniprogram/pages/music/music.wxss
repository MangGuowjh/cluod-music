.swiper{
  height: 340rpx;
}
.img{
  width: 100%;
  height: 100%;
  margin-top: 10rpx;
  border-radius:100rpx
}
.title{
  font-size: 48rpx;
  margin-top: 150rpx;
  margin-left: 20rpx;
}
.playlist-container{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.scroll-d{
  white-space: nowrap;
  display: flex;
}
.player-info{
  margin-top: 10rpx;
  text-align: left;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.control{
  position: absolute;
  margin-top: 360rpx;
  display: flex;
  }
  .control .iconfont{
    color: #d43c33;
  }
  .icon-rili, .icon-FM_weixuanze, .icon-gedan, .icon-PCbofangye_paihangbang, .icon-zhibo, 
  .icon-zhuanjiguangpan, .icon-maikefeng, .icon-youxi{
