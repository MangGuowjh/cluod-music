<!--pages/music/music.wxml-->
<swiper indicator-dots="true" indicator-active-color="#d43c43" autoplay="true" 
interval="3000" duration="1000" class="swiper">
<block wx:for="{{imgUrls}}" wx:key="index">
  <swiper-item>
    <image src="{{item.url}}" class="img" mode="scaleToFill"></image>
  </swiper-item>
</block>
</swiper>

<text class="control">
    <text class="iconfont icon-rili"></text>
    <text class="iconfont icon-FM_weixuanze"></text>
    <text class="iconfont icon-gedan"></text>
    <text class="iconfont icon-PCbofangye_paihangbang"></text>
    <text class="iconfont icon-zhibo"></text>
    <text class="iconfont icon-zhuanjiguangpan"></text>
    <text class="iconfont icon-maikefeng" ></text>
    <text class="iconfont icon-youxi"></text>
</text>


<text class="title">推荐歌单</text>
<view class="playlist-container">
  <block wx:for="{{playlist}}" wx:key="_id">
    <d-playlist playlist="{{item}}"></d-playlist>
  </block>
</view>
